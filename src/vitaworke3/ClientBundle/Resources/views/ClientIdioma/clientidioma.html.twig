<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>Template 1</title>
<link href="style.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
	function lista() {
		var lista = document.getElementById('Empresa');
		var url = lista.options[lista.selectedIndex].getAttribute('data-url');
		window.location = url;
	};
</script>

</head>
<body>
<div id="content">
<h1>Templates idiomes disponibles per empresa/grup</h1>
<br>
<select id="Empresa" onchange='lista()'>
{% for empresa in empreses %} 
	<option value="{{ empresa.slug }}" data-url="{{ url('extranet_client_idioma_filtre', { 'idempresa': empresa.id }) }}" {{ idempresa == empresa.id ? 'selected="selected"' : '' }}>{{ empresa.client}}</option>
{% endfor %}
	<option value="Tots" data-url="{{ url('extranet_client_idioma')}}" {{ idempresa == 'Tots' ? 'selected="selected"' : '' }}>Tots</option>
</select>
<br> 
<br> 
<table width="1000">
<td width="300">Nom</td>
<td width="200">Idioma</td>
<td width="500">template</td>
<td width="100"></td>
</table>
{% for empresa in empreses %}
<table width="1000">
<td width="300">{{ empresa.Client}}</td>
<td width="200">{{ empresa.Idioma}}</td>
<td width="500">{{ empresa.nomtemplate}}</td>
<td width="100"><INPUT type="button" value="Editar" onClick="location.href='{{ path('extranet_client_idioma_editar', {'id': empresa.id })}}'"><td>
</table>
{% endfor %}
<INPUT type="button" value="Nou template" onClick="location.href='{{ path('extranet_client_idioma_nou')}}'">
<INPUT type="button" value="Tornar a perfil" onClick="location.href='{{ path('extranet_perfil')}}'">
<INPUT type="button" value="Tornar a portada" onClick="location.href='{{ path('extranet_portada')}}'">
</div>
</body>
</html> 