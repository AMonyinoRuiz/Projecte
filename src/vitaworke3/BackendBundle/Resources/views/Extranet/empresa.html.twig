
 <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>Template 1</title>
<link href="{{asset('css/stylevisualitzaractivitat.css')}}" rel="stylesheet" type="text/css"/>
<link href="{{asset('css/select2.css')}}" rel="stylesheet" type="text/css"/>
<script src="{{ asset('js/jquery-1.9.1.min.js') }}"></script>
<script src="{{asset('js/select2.js')}}"></script>
</head>
<body>


<div id="content">
<h1>Empresa</h1>
<br>
	{{ simple_paginator_render('extranet_calendari', null, {
'container_class': 'paginador',
'previousPageText': 'Anterior',
'nextPageText': 'Siguiente',
'currentClass': 'actual',
'firstPageText': 'Primera',
'lastPageText': 'Ãšltima'
}) }}
<br>
<table width="800">
<td width="200">Nom empresa</td>
<td width="200">Idioma prefixat</td>
<td width="200">Template</td>
<td width="200"></td>
</table>
{% for empresa in empresas %}
<table width="800">
<td width="300">{{ empresa.Nom}}</td>
<td width="200">{{ empresa.Idioma}}</td>
<td width="200">{{ empresa.Template}}</td>

<td width="200"><INPUT type="button" value="Editar" onClick="location.href='{{ path('extranet_empresa_editar', {'id': empresa.id })}}'"><td>
</table>
{% endfor %}

</tbody>
</table>
<ul class="paginador">
{% if paginador.currentPage > 1 %}
<li><a href="{{ path('extranet_empresa', { 'page': paginador.previousPage
}) }}">Anterior</a></li>
{% else %}
<li>Anterior</li>
{% endif %}
{% for page in paginador.minPageInRange..paginador.maxPageInRange %}
{% if page == paginador.currentPage %}
<li class="actual">{{ page }}</li>
{% else %}
<li><a href="{{ path('extranet_empresa', { 'page': page }) }}">{{ page
}}</a></li>
{% endif %}
{% endfor %}
{% if paginador.currentPage < paginador.lastPage %}
<li><a href="{{ path('extranet_empresa', { 'page': paginador.nextPage })
}}">Siguiente</a></li>
{% else %}
<li>Siguiente</li>
{% endif %}
</ul>

<INPUT type="button" value="Afegir empresa" onClick="location.href='{{ path('extranet_empresa_nova')}}'">
<INPUT type="button" value="Tornar a perfil" onClick="location.href='{{ path('extranet_perfil')}}'">
<INPUT type="button" value="Tornar a portada" onClick="location.href='{{ path('extranet_portada')}}'">
</div>
</body>
</html> 